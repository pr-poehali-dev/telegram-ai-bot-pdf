{
  "tests": [
    {
      "name": "Confirmation request",
      "method": "POST",
      "path": "/",
      "body": {
        "type": "confirmation",
        "group_id": 123456789
      },
      "expectedStatus": 200,
      "expectedBody": "vk_confirm_123456789"
    },
    {
      "name": "Handle incoming message",
      "method": "POST",
      "path": "/",
      "body": {
        "type": "message_new",
        "object": {
          "message": {
            "from_id": 12345,
            "text": "Привет"
          }
        }
      },
      "expectedStatus": 200,
      "expectedBody": "ok"
    }
  ]
}
